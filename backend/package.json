{
  "name": "note-taking-backend",
  "version": "1.0.0",
  "description": "Backend for note-taking application",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon src/server.ts",
    "build": "npm run build:frontend && npm run build:backend && npm run copy:frontend",
    "build:frontend": "cd ../frontend && npm install && npm run build",
    "build:backend": "tsc",
    "copy:frontend": "npx cpx \"../frontend/build/**\" \"dist/frontend/build\"",
    "start": "node dist/server.js",
    "postbuild": "echo 'Build completed successfully'",
    "test": "jest"
  },
  "keywords": [
    "notes",
    "typescript",
    "nodejs",
    "mongodb"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.5",
    "@types/nodemailer": "^6.4.14",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "google-auth-library": "^9.15.1",
    "helmet": "^7.1.0",
    "iconv-lite": "^0.7.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "nodemailer": "^6.9.7",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/joi": "^17.2.2",
    "cpx": "^1.5.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.1"
  }
}
